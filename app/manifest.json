			"./assets/settings-icon",
			"./assets/dotted-line",
			"./assets/index-hl",
			"./assets/point-thumb-in",
			"./assets/slow",
			"./assets/fast",
			"./assets/index-sm",
			"./assets/point-thumb-out",
