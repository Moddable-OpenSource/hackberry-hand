{
	"include": [
		"$(MODDABLE)/examples/manifest_base.json",
		"$(MODDABLE)/examples/manifest_piu.json",
		"$(MODDABLE)/modules/files/preference/manifest.json",
	],
	"creation": {
		"stack": 400
	},
	"modules": {
		"*": [
			"./main",
			"./assets",
			"./screens",
			"./gestures"
		]
	},
	"preload": [
		"main",
		"assets",
		"screens",
		"gestures"
	],
	"platforms": {
		"esp32": {
			"include": [
				"$(MODULES)/pins/servo/manifest.json"
			],
			"modules": {
				"*": [
					"./device/sensors"
				],
			},
			"preload": "sensors"
		},
		"mac": {
			"modules": {
				"*": [
					"./simulator/sensors"
				]
			},
			"preload": "sensors"
		}
	},
	"resources":{
		"*-color": [
			"./assets/scrubber"
		],
		"*-mask": [
			"./fonts/open-sans-reg-12",
			"./assets/back-arrow",
